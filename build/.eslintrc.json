{
	"root": true,
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"plugin:@wordpress/eslint-plugin/recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"wp": "readonly",
		"wpApiSettings": "readonly",
		"window": true,
		"document": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018
	},
	"plugins": [
		"jsx-a11y",
		"jest"
	],
	"settings": {},
	"rules": {
		"padded-blocks": [
			"error",
			{
				"classes": "always",
				"switches": "never",
				"blocks": "never"
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		]
	}
}
